@model IEnumerable<DocflowApp.Models.Folder>
@{
    ViewBag.Title = "Папки";
}
<h2>Папки</h2>
<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <td width=32 />
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Root)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.FolderName, "Index", new { root = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Root)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, ReturnUrl = Request.RawUrl })
            </td>
        </tr>
    }
</table>